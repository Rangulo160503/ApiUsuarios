@model List<ApiUsuarios.WEB.Models.VehiculoDto>

<h2>Vehiculos</h2>

<a asp-action="Crear" class="btn btn-primary mb-2">Nuevo vehiculo</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Marca</th>
            <th>Modelo</th>
            <th>Anno</th>
            <th>Precio</th>
            <th>Color</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var u in Model)
        {
            <tr>
                <td>@u.Id</td>
                <td>@u.Marca</td>
                <td>@u.Modelo</td>
                <td>@u.Anno</td>
                <td>@u.Precio</td>
                <td>@u.Color</td>
                <td>
                    <a asp-action="Detalle" asp-route-id="@u.Id">Ver</a> |
                    <a asp-action="Editar" asp-route-id="@u.Id">Editar</a> |
                    <a asp-action="Eliminar" asp-route-id="@u.Id">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
